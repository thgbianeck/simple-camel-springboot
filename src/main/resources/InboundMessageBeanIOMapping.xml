<beanio xmlns="http://www.beanio.org/2012/03" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.beanio.org/2012/03 http://www.beanio.org/2012/03/mapping.xsd">

    <stream name="inputMessageStream" format="csv">
        <record name="inboundNameAddress" class="br.com.bnck.beans.NameAddress">
            <field name="name" minOccurs="1" trim="true"/>
            <field name="houseNumber" minOccurs="1" trim="true"/>
            <field name="city" minOccurs="1" trim="true"/>
            <field name="province" minOccurs="1" trim="true"/>
            <field name="postalCode" minOccurs="1" trim="true"/>
        </record>
    </stream>

</beanio>